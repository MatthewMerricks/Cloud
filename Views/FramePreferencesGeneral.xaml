<Page x:Class="win_client.Views.FramePreferencesGeneral" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:common="clr-namespace:CloudApiPrivate.Common;assembly=CloudApiPrivate"
    xmlns:commonClient="clr-namespace:win_client.Common"
    xmlns:extToolkit="clr-namespace:Xceed.Wpf.Toolkit;assembly=WPFToolkit.Extended"
    mc:Ignorable="d" d:DesignWidth="624" d:DesignHeight="442"
    DataContext="{Binding FramePreferencesGeneralViewModel, Source={StaticResource Locator}}" 
    WindowTitle="Create New Account" >

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/win-client;component/Skins/MainSkin.xaml" />
                <ResourceDictionary Source="/win-client;component/Skins/ErrorTemplates.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Page.Resources>

    <extToolkit:BusyIndicator BusyContent="{Binding BusyContent, Mode=OneWayToSource}" IsBusy="{Binding IsBusy, Mode=OneWayToSource}">
        <Grid x:Name="LayoutRoot">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="0.056*"/>
                <ColumnDefinition  Width="0.385*"/>
                <ColumnDefinition Width="0.061*"/>
                <ColumnDefinition Width="0.052*"/>
                <ColumnDefinition  Width="0.382*"/>
                <ColumnDefinition Width="0.064*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="65*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="20*"/>
            </Grid.RowDefinitions>
            
            <Grid.Background>              
                <ImageBrush Stretch="UniformToFill" ImageSource="/win-client;component/Artwork/cl_inside_ptrn_logo_side.png"/>
            </Grid.Background>
                           
            <Grid Grid.Column="1" Margin="48,93,37,36" Grid.RowSpan="4" Grid.ColumnSpan="4">
    		    <Grid.RowDefinitions>
    			    <RowDefinition Height="11*"/>
    			    <RowDefinition Height="37*"/>
    			    <RowDefinition Height="9*"/>
    			    <RowDefinition Height="40*"/>
    			    <RowDefinition Height="8*"/>
    			    <RowDefinition Height="42*"/>
    			    <RowDefinition Height="39*"/>
    			    <RowDefinition Height="8*"/>
    			    <RowDefinition Height="42*"/>
    			    <RowDefinition Height="36*"/>
                    <RowDefinition Height="41*"/>
                </Grid.RowDefinitions>
    		    <Grid.ColumnDefinitions>
    			    <ColumnDefinition Width="0.347*"/>
    			    <ColumnDefinition Width="0.556*"/>
    			    <ColumnDefinition Width="0.096*"/>
    		    </Grid.ColumnDefinitions>
    		    <Rectangle Fill="#CCF4F4F5" Stroke="#34000000" Grid.ColumnSpan="3" Grid.RowSpan="11" Margin="0,0,0,0" RadiusX="5" RadiusY="5" Opacity="0.9"/>
                <CheckBox Content="Start Cloud when system starts" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="1" Margin="10,5,10,5" FontSize="13.333"/>
                <CheckBox Content="Animate menu bar icon" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="1" Margin="10,10,0,12" FontSize="13.333"/>
                <common:SecurePasswordBox x:Name="tbConfirmPassword" Foreground="Black" Margin="0,5" Grid.Row="6" Grid.Column="1" 
                         Text="{Binding ConfirmPassword, Mode=TwoWay, ValidatesOnDataErrors=True}" TabIndex="4" FontSize="13.333" 
                         Validation.ErrorTemplate="{StaticResource errorTemplate}"
                         commonClient:DefaultButtonHub.DefaultHub="{StaticResource defaultHub}"/>
                <TextBox Name="tbComputerName" TextAlignment="Left" Foreground="Black" Margin="0,5" Grid.Row="8" Grid.Column="1" 
                         Text="{Binding ComputerName, Mode=TwoWay, ValidatesOnDataErrors=True}" TabIndex="5" FontSize="13.333" Style="{StaticResource controlHasErrorCheck}"
                         Validation.ErrorTemplate="{StaticResource errorTemplate}"
                         commonClient:DefaultButtonHub.DefaultHub="{StaticResource defaultHub}"/>
                <TextBlock TextWrapping="Wrap" Text="Startup: " RenderTransformOrigin="0.5,0.5"
    			    Foreground="Black" FontSize="16" Margin="0,8,7,2" Grid.Row="1" TextAlignment="Right"/>
    		    <TextBlock TextWrapping="Wrap" Text="When files update: " RenderTransformOrigin="0.5,0.5" 
    			    Foreground="Black" FontSize="16" Margin="-1,8,8,5" Grid.Row="3" TextAlignment="Right"/>
                <TextBlock TextWrapping="Wrap" Text="Cloud folder: " RenderTransformOrigin="0.5,0.5" 
    			    Foreground="Black" FontSize="16" Margin="2,9,5,0" Grid.Row="6" TextAlignment="Right"/>
    		    <TextBlock TextWrapping="Wrap" Text="Select your language: " RenderTransformOrigin="0.5,0.5"
    			    Foreground="Black" FontSize="16" Margin="2,5,5,5" Grid.Row="8" TextAlignment="Right"/>
                <TextBox x:Name="tbComputerName_Copy" TextAlignment="Left" Foreground="Black" Margin="0,0,0,4" Grid.Row="9" Grid.Column="1" 
    		    	Text="{Binding ComputerName, Mode=TwoWay, ValidatesOnDataErrors=True}" TabIndex="5" FontSize="13.333" Style="{StaticResource controlHasErrorCheck}"
    		    	Validation.ErrorTemplate="{StaticResource errorTemplate}"
    		    	commonClient:DefaultButtonHub.DefaultHub="{StaticResource defaultHub}"/>
                <TextBlock TextWrapping="Wrap" Text="Updates: " RenderTransformOrigin="0.5,0.5"
    		    	Foreground="Black" FontSize="16" Margin="2,0,5,4" Grid.Row="9" TextAlignment="Right"/>
            </Grid>

        </Grid>
        
    </extToolkit:BusyIndicator>

</Page>
