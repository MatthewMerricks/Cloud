    <!-- The taskbar context menu - the first row is a dummy to show of simple data binding -->
    <!--
        The "shared" directive is needed if we reopen the sample a few times - WPF will otherwise
        reuse the same context menu again (which will have its DataContext set to the old TaskbarIcon)
  -->
    <ContextMenu x:Shared="false" x:Key="tbMenu">
        <MenuItem IsEnabled="False" Header="{x:Static p:Resources.SystemTrayContextMenuHeader}">
            <MenuItem.Icon>
                <Image Width="16" Height="16" Source="/Cloud;component/Artwork/StatusItem-Online.png" />
            </MenuItem.Icon>
        </MenuItem>

        <MenuItem Header="{x:Static p:Resources.SystemTrayContextMenuShowCloudFolder}" Command="{Binding ShowCloudFolderCommand, Mode=OneTime}" CommandParameter="{Binding}">
            <MenuItem.Icon>
                <Image Width="16" Height="16" Source="/Cloud;component/Artwork/AddNotifyIconSample.png" />
            </MenuItem.Icon>
        </MenuItem>

        <MenuItem Header="{x:Static p:Resources.SystemTrayContextMenuPreferences}" Command="{Binding ShowPreferencesPageCommand, Mode=OneTime}" CommandParameter="{Binding}">
            <MenuItem.Icon>
                <Image Width="16" Height="16" Source="/Cloud;component/Artwork/AddNotifyIconSample.png" />
            </MenuItem.Icon>
        </MenuItem>

        <MenuItem Header="{x:Static p:Resources.SystemTrayContextMenuCheckForUpdates}" Command="{Binding CheckForUpdatesCommand, Mode=OneTime}" CommandParameter="{Binding}">
            <MenuItem.Icon>
                <Image Width="16" Height="16" Source="/Cloud;component/Artwork/AddNotifyIconSample.png" />
            </MenuItem.Icon>
        </MenuItem>

        <Separator />

        <MenuItem Header="{x:Static p:Resources.SystemTrayContextMenuExit}" Command="{Binding ExitApplicationCommand, Mode=OneTime}" CommandParameter="{Binding}">
            <MenuItem.Icon>
                <Image Width="16" Height="16" Source="/Cloud;component/Artwork/RemoveNotifyIconSample.png" />
            </MenuItem.Icon>
        </MenuItem>
    </ContextMenu>

</ResourceDictionary>
