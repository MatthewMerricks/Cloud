    <!-- Standard Windows Button -->
    <ControlTemplate x:Key="WinBtnStandard" TargetType="{x:Type Button}">
        <ControlTemplate.Resources>
            <Storyboard x:Key="OnMouseEnter1">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="lighten">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.445"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="outer_glow">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0.4"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
            <Storyboard x:Key="OnMouseLeave1">
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="lighten">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
                </DoubleAnimationUsingKeyFrames>
                <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.Opacity)" Storyboard.TargetName="outer_glow">
                    <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="0"/>
                </DoubleAnimationUsingKeyFrames>
            </Storyboard>
        </ControlTemplate.Resources>
        <Grid x:Name="main_grid">
            <Rectangle x:Name="outer_glow" Fill="{TemplateBinding BorderBrush}" Opacity="0" RadiusX="1.25" RadiusY="1.25">
                <Rectangle.Effect>
                    <BlurEffect RenderingBias="Quality"/>
                </Rectangle.Effect>
            </Rectangle>
            <Rectangle x:Name="background" Fill="{TemplateBinding Background}" Stroke="#FF74A6BF" RadiusX="1.75" RadiusY="1.75"/>
            <Rectangle x:Name="lighten" Fill="White" Opacity="0" RadiusX="1.25" RadiusY="1.25"/>
            <Rectangle x:Name="darken" Fill="#FF01476A" Opacity="0" RadiusX="1.25" RadiusY="1.25"/>
            <Rectangle x:Name="inner_glow" Margin="1" Fill="#FFB8D9E4" RadiusX="1.25" RadiusY="1.25">
                <Rectangle.OpacityMask>
                    <RadialGradientBrush GradientOrigin="0.5,1" Center="0.5,1" RadiusX="0.8">
                        <GradientStop Color="Black" Offset="0"/>
                        <GradientStop Offset="1"/>
                    </RadialGradientBrush>
                </Rectangle.OpacityMask>
            </Rectangle>
            <Rectangle x:Name="InnerBorder" Stroke="White" Margin="1" Opacity="0.615" RadiusY="1.25" RadiusX="1.25"/>
            <Rectangle x:Name="upper_highlight" Margin="1" StrokeThickness="0.5" RadiusY="1.25" RadiusX="1.25">
                <Rectangle.Stroke>
                    <LinearGradientBrush EndPoint="0.5,0.3" StartPoint="0.5,1">
                        <GradientStop Color="#53FFFFFF" Offset="1"/>
                        <GradientStop Offset="0.7"/>
                    </LinearGradientBrush>
                </Rectangle.Stroke>
            </Rectangle>
            <Rectangle x:Name="lower_highlight" StrokeThickness="0.5" Margin="1" RadiusY="1.25" RadiusX="1.25">
                <Rectangle.Stroke>
                    <LinearGradientBrush EndPoint="0.5,0.3" StartPoint="0.5,1">
                        <GradientStop Offset="0.5"/>
                        <GradientStop Color="#4C9FE1FF"/>
                    </LinearGradientBrush>
                </Rectangle.Stroke>
            </Rectangle>
            <Grid x:Name="Shine_grid">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Rectangle x:Name="shine" Grid.Column="0" Margin="1,1,1,0" d:LayoutOverrides="GridBox" StrokeThickness="0" Height="Auto" RadiusX="1.25" RadiusY="1.25">
                    <Rectangle.Fill>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#CCFFFFFF" Offset="0"/>
                            <GradientStop Color="#3DFFFFFF" Offset="1"/>
                        </LinearGradientBrush>
                    </Rectangle.Fill>
                    <Rectangle.Stroke>
                        <LinearGradientBrush EndPoint="0.5,0.3" StartPoint="0.5,1">
                            <GradientStop Color="#7EFFFFFF" Offset="1"/>
                            <GradientStop Offset="0.502" Color="#19FFFFFF"/>
                        </LinearGradientBrush>
                    </Rectangle.Stroke>
                </Rectangle>
            </Grid>
            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}" d:IsLocked="True"/>
        </Grid>
        <ControlTemplate.Triggers>
            <EventTrigger RoutedEvent="FrameworkElement.Loaded"/>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" TargetName="main_grid" Value="0.5"/>
                <Setter Property="Visibility" TargetName="inner_glow" Value="Hidden"/>
                <Setter Property="Visibility" TargetName="upper_highlight" Value="Hidden"/>
                <Setter Property="Fill" TargetName="background">
                    <Setter.Value>
                        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                            <GradientStop Color="Gainsboro" Offset="0"/>
                            <GradientStop Color="Silver" Offset="0.5"/>
                            <GradientStop Color="Silver" Offset="1"/>
                            <GradientStop Color="Gainsboro" Offset="0.499"/>
                        </LinearGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Stroke" TargetName="background" Value="Gray"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Opacity" TargetName="upper_highlight" Value="0.6"/>
                <Setter Property="OpacityMask" TargetName="inner_glow">
                    <Setter.Value>
                        <RadialGradientBrush Center="0.5,1" GradientOrigin="0.5,1" Opacity="0.6" RadiusX="0.8">
                            <GradientStop Color="Black" Offset="0"/>
                            <GradientStop Offset="1"/>
                        </RadialGradientBrush>
                    </Setter.Value>
                </Setter>
                <Setter Property="Opacity" TargetName="darken" Value="0.3"/>
            </Trigger>
            <EventTrigger RoutedEvent="Mouse.MouseEnter">
                <BeginStoryboard x:Name="OnMouseLeave1_BeginStoryboard" Storyboard="{StaticResource OnMouseEnter1}"/>
            </EventTrigger>
            <EventTrigger RoutedEvent="Mouse.MouseLeave">
                <BeginStoryboard x:Name="OnMouseLeave1_BeginStoryboard1" Storyboard="{StaticResource OnMouseLeave1}"/>
            </EventTrigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>
    
