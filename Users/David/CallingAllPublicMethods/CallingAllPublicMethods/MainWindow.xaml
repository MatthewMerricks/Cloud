<Window x:Class="CallingAllPublicMethods.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:CallingAllPublicMethods.Controls"
        Title="CLSyncbox Public Method Caller" Height="350" Width="525"
        DataContext="{StaticResource MainViewModel}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <controls:SelectedSyncboxControl Grid.Row="1" Grid.Column="1"
            DataContext="{Binding SyncboxViewModel}" />
    </Grid>
</Window>
