<?xml version="1.0" encoding="utf-8" ?>
<SmokeTest xmlns="http://www.cloud.com/InputParameters.xsd"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.cloud.com InputParameters.xsd">

  <!-- Task For Testing Host 1 Folder Rename While Host 2 is Mid Sync-->
  <!-- Start 1 Active Sync Session 
          Add Multiple Large Files to Host 1 Active Sync Folder
          Confirm Upload of Host 1 Files are complete 
          Start Active Sync Session for Host 2 
          Rename a Folder in Host 1 while host 2 is syncing-->

  <ScenarioTasks>
    <SmokeTask xsi:type="Deletion">
      <type>Deletion</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>SyncBox</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <DeleteAll>true</DeleteAll>
    </SmokeTask>
    <SmokeTask xsi:type="CreateSyncBox">
      <type>CreateSyncBox</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>SyncBox</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <CreateNew>true</CreateNew>
      <Count>1</Count>
    </SmokeTask>
    <SmokeTask xsi:type="Prompt">
      <type>Prompt</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>None</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <Message>Please Begin An Active Sync Session.</Message>
    </SmokeTask>
    <SmokeTask xsi:type="Creation">
      <type>Creation</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>Folder</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <Name>FolderForTesting</Name>
      <Path>\</Path>
      <CreateNew>true</CreateNew>
    </SmokeTask>
    <SmokeTask xsi:type="Creation">
      <type>Creation</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>File</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <Name>mySmallFile.txt</Name>
      <Path>\FolderForTesting\</Path>
      <CreateNew>true</CreateNew>
      <Count>5</Count>
      <ActInTwoFolders>false</ActInTwoFolders>
      <IsLarge>false</IsLarge>
    </SmokeTask>
    <SmokeTask xsi:type="Creation">
      <type>Creation</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>File</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <Name>myLargeFile.txt</Name>
      <Path>\FolderForTesting\</Path>
      <CreateNew>true</CreateNew>
      <Count>10</Count>
      <ActInTwoFolders>false</ActInTwoFolders>
      <IsLarge>true</IsLarge>
    </SmokeTask>
    <SmokeTask xsi:type="Prompt">
      <type>Prompt</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>None</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <Message>Please wait and confirm that SyncBox File Upload are Complete</Message>
    </SmokeTask>
    <SmokeTask xsi:type="Prompt">
      <type>Prompt</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>None</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <Message>Start Second Active Sync Session with Syncbox Id used in initial Sync</Message>
    </SmokeTask>
    <SmokeTask xsi:type="Rename">
      <type>Rename</type>
      <SyncType>Active</SyncType>
      <ObjectType>
        <type>Folder</type>
      </ObjectType>
      <SelectedSyncBoxID>0</SelectedSyncBoxID>
      <OldName>FolderForTesting</OldName>
      <NewName>RenamedSuccessful</NewName>
      <RelativeDirectoryPath>\</RelativeDirectoryPath>
      <ActInTwoFolders>false</ActInTwoFolders>
    </SmokeTask>
  </ScenarioTasks>
</SmokeTest>
<!-- End Task For Testing Host 1 Folder Rename While Host 2 is Mid Sync-->
