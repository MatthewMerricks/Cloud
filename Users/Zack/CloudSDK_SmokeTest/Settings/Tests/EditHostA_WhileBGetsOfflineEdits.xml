<?xml version="1.0" encoding="utf-8" ?>
<SmokeTest xmlns="http://www.cloud.com/InputParameters.xsd"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://www.cloud.com InputParameters.xsd">

  <!-- Task For Testing Host 1 Folder Rename while Host 2 Offline  -->
  <!-- Testing Scenario where 2 Hosts are Open and in Sync 
           Host 2 Goes Offline 
           Make Chnages to Host 1 (including Folder Rename)
           Host  2 Comes Back Online
           Host 2 Creates / Modifies Existing items 
           Check if Folders are in Sync-->
  <ScenarioTasks>
      <SmokeTask xsi:type="Deletion">
        <type>Deletion</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>SyncBox</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <DeleteAll>true</DeleteAll>
        <ID>0</ID>
        <ServerID>0</ServerID>
      </SmokeTask>
      <SmokeTask xsi:type="CreateSyncBox">
        <type>CreateSyncBox</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>SyncBox</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <CreateNew>true</CreateNew>
        <Count>1</Count>
      </SmokeTask>
      <SmokeTask xsi:type="Prompt">
        <type>Prompt</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>None</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Message>Please Begin 2 Active Sync Processes.</Message>
      </SmokeTask>
      <SmokeTask xsi:type="Creation">
        <type>Creation</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>File</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Name>BeforeStopping.txt</Name>
        <Path>\</Path>
        <CreateNew>true</CreateNew>
        <Count>5</Count>
      </SmokeTask>
      <SmokeTask xsi:type="Creation">
        <type>Creation</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>File</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Name>ProiorStopping.txt</Name>
        <Path>\Prior\</Path>
        <CreateNew>true</CreateNew>
        <Count>5</Count>
      </SmokeTask>
      <SmokeTask xsi:type="Creation">
        <type>Creation</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>Folder</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Name>PreStop</Name>
        <Path>\Prior\</Path>
        <CreateNew>true</CreateNew>
        <Count>5</Count>
      </SmokeTask>
      <SmokeTask xsi:type="Comparison">
        <type>Comparison</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>None</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <ComparisonType>ActiveToActive</ComparisonType>
        <UseDynamicSyncBox>true</UseDynamicSyncBox>
        <ShouldWait>true</ShouldWait>
      </SmokeTask>
      <SmokeTask xsi:type="Prompt">
        <type>Prompt</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>None</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Message>Please Pause One Of SyncBox's Active Sync Process</Message>
      </SmokeTask>
      <SmokeTask xsi:type="Creation">
        <type>Creation</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>File</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Name>AfterStopping.txt</Name>
        <Path>\After\</Path>
        <CreateNew>true</CreateNew>
        <Count>5</Count>
      </SmokeTask>
      <SmokeTask xsi:type="Creation">
        <type>Creation</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>Folder</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Name>PostStop</Name>
        <Path>\Post\</Path>
        <CreateNew>true</CreateNew>
        <Count>5</Count>
      </SmokeTask>
      <SmokeTask xsi:type="Prompt">
        <type>Prompt</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>None</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <Message>Please Restart Stopped Active Process</Message>
      </SmokeTask>
      <SmokeTask xsi:type="Rename">
        <type>Rename</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>Folder</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <OldName>Prior</OldName>
        <NewName>PriorRenamed</NewName>
        <RelativeDirectoryPath>\</RelativeDirectoryPath>
        <ServerID>0</ServerID>
        <ActInTwoFolders>false</ActInTwoFolders>
      </SmokeTask>
      <SmokeTask xsi:type="Rename">
        <type>Rename</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>Folder</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <OldName>PreStop</OldName>
        <NewName>PreStoppedRenamed</NewName>
        <RelativeDirectoryPath>\PriorRenamed\</RelativeDirectoryPath>
        <ServerID>0</ServerID>
        <ActInTwoFolders>false</ActInTwoFolders>
      </SmokeTask>
      <SmokeTask xsi:type="Comparison">
        <type>Comparison</type>
        <SyncType>Active</SyncType>
        <ObjectType>
          <type>None</type>
        </ObjectType>
        <SelectedSyncBoxID>0</SelectedSyncBoxID>
        <ComparisonType>ActiveToActive</ComparisonType>
        <UseDynamicSyncBox>true</UseDynamicSyncBox>
        <ShouldWait>true</ShouldWait>
      </SmokeTask>
    </ScenarioTasks>
  <!-- End Task For Testing Host 1 Folder Rename while Host 2 Offline  -->
</SmokeTest>