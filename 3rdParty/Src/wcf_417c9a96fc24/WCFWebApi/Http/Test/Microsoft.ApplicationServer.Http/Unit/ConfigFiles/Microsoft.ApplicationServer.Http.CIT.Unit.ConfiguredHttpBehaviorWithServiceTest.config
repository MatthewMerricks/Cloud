<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <system.serviceModel>

    <services>
      <service name="Microsoft.ApplicationServer.Common.Test.Services.CustomerService">
        <endpoint address="http://somehost"
                  contract="Microsoft.ApplicationServer.Common.Test.Services.CustomerService"
                  binding="httpBinding"
                  behaviorConfiguration="configuredBehavior"/>
      </service>
    </services>
    
    <behaviors>
      <endpointBehaviors>
        <!-- named configured httpBehavior -->
        <behavior name="configuredBehavior">
          <httpBehavior helpEnabled="false" trailingSlashMode="Ignore" />
        </behavior>
        <!-- default configured httpBehavior -->
        <behavior  name="">
          <httpBehavior helpEnabled="false" trailingSlashMode="Ignore" />
        </behavior>
      </endpointBehaviors>
    </behaviors>

    <extensions>
      <bindingExtensions>
        <add name="httpBinding" type="Microsoft.ApplicationServer.Http.Configuration.HttpBindingCollectionElement, Microsoft.ApplicationServer.Http, Version=2.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35"/>
      </bindingExtensions>
      <behaviorExtensions>
        <add name="httpBehavior" type="Microsoft.ApplicationServer.Http.Configuration.HttpBehaviorElement, Microsoft.ApplicationServer.Http, Version=2.0.0.0, Culture=neutral, PublicKeyToken=31bf3856ad364e35"/>
      </behaviorExtensions>
    </extensions>
    
  </system.serviceModel>
</configuration>
